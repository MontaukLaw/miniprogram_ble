<radio-group class="radio-group" bindchange="onDrawTypeRadioChange" wx:if="{{connected}}">
  <radio class="radio" wx:for-items="{{drawType}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
    <text>{{item.value}}</text>
  </radio>
</radio-group>
<canvas id="myCanvas" type="2d" style="width: 100vw; height: 400px;" />
