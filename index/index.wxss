/* 扫描到的设备列表视图的类 */
.device_list {
  /* height: 80px; */
  margin: 5px 5px;
  margin-top: 0;
  border: 1px solid #EEE;
  border-radius: 5px;
  width: auto;
  height: auto;
}

.device_item {
  border-bottom: 1px solid #EEE;
  padding: 10px;
  color: #666;
}

.device_item_hover {
  background-color: rgba(0, 0, 0, .1);
}

.logo_img {
  margin-top: 20px;
  width: 126px;
  height: 35px;
}

.connected_info {
  position: fixed;
  bottom: 0;
  width: 90%;
  border: 1px solid #EEE;
  border-radius: 5px;
  margin: 50px 5px;
  /* background-color: #F0F0F0; */
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 120px;
  /* box-shadow: 0px 0px 3px 0px; */
}

.connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}